{
  "manifest_version": 3,
  "name": "CLIMB - Veterinary Article Saver",
  "version": "1.0.0",
  "description": "Save veterinary articles from any webpage to CLIMB local knowledge base",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:3456/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "extractors/generic.js",
        "extractors/facebook.js",
        "extractors/instagram.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
